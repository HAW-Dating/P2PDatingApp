<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Create by Daniel -->
    <!--
    Revision by Altrichter Daniel on 4.04.16.
    EinfÃ¼gen eines Drawers.
    -->
    <!--
    Revision by Altrichter Daniel on 15.03.16.

    -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/my_profile_activity_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                style="@style/profile_headings"
                android:text="@string/myprofil" />

            <TableLayout style="@style/profile_table_layout">
                <!-- Zeile 1  -->
                <TableRow style="@style/profile_table_row">

                    <TextView
                        style="@style/profile_textviews"
                        android:text="@string/name" />

                    <EditText
                        android:id="@+id/profil_name"
                        style="@style/profile_edittext"
                        android:layout_width="match_parent" />

                </TableRow>
                <!-- Zeile 2  -->
                <TableRow style="@style/profile_table_row">

                    <TextView
                        style="@style/profile_textviews"
                        android:text="@string/age" />

                    <EditText
                        android:id="@+id/profile_age"
                        style="@style/profile_age"
                        android:layout_width="match_parent" />

                </TableRow>
                <!-- Zeile 3  -->
                <TableRow style="@style/profile_table_row">

                    <TextView
                        style="@style/profile_textviews"
                        android:text="@string/gender" />

                    <Spinner
                        android:id="@+id/profile_gender"
                        style="@style/profile_spinner_sexual" />

                </TableRow>
                <!-- Zeile 4  -->
                <TableRow style="@style/profile_table_row">

                    <TextView
                        style="@style/profile_textviews"
                        android:text="@string/studie" />

                    <EditText
                        android:id="@+id/profile_studies"
                        style="@style/profile_edittext"
                        android:layout_width="match_parent" />

                </TableRow>
                <!-- Zeile 5  -->
                <TableRow style="@style/profile_table_row">

                    <TextView
                        style="@style/profile_textviews"
                        android:text="@string/university" />

                    <Spinner
                        android:id="@+id/profile_university"
                        style="@style/profile_spinner_university" />

                </TableRow>
                <!-- Zeile 6  -->

                <!-- Zeile 7  -->
                <TableRow style="@style/profile_table_row">

                    <TextView
                        style="@style/profile_textviews"
                        android:text="@string/hometown" />

                    <EditText
                        android:id="@+id/profile_hometown"
                        style="@style/profile_edittext"
                        android:layout_width="match_parent" />

                </TableRow>
                <!-- Zeile 8  -->
                <TableRow style="@style/profile_table_row">

                    <TextView
                        style="@style/profile_textviews"
                        android:text="@string/postal_code" />

                    <EditText
                        android:id="@+id/profil_postal_code"
                        style="@style/profile_edit_plz"
                        android:layout_width="match_parent" />

                </TableRow>
                <!-- Zeile 9  -->
                <TableRow style="@style/profile_table_row">

                    <TextView
                        style="@style/profile_textviews"
                        android:text="@string/sexual_preference" />

                    <Spinner
                        android:id="@+id/profile_sexual_preference"
                        style="@style/profile_spinner_sexual" />

                </TableRow>
                <!-- Zeile 10  -->
                <!--            <TableRow
                                style="@style/profile_table_row">

                                <TextView
                                    android:text="@string/profil_photo"
                                    style="@style/profile_textviews"
                                    />

                            </TableRow>-->

                <TableRow style="@style/profile_table_row">


                    <TextView
                        style="@style/profile_textviews"
                        android:text="@string/interests" />


                    <EditText
                        android:id="@+id/profile_interests_1"
                        style="@style/profile_edittext"
                        android:layout_width="wrap_content" />
                </TableRow>


                <TableRow style="@style/profile_table_row">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    </LinearLayout>

                    <EditText
                        android:id="@+id/profile_interests_2"
                        style="@style/profile_edittext"
                        android:layout_width="wrap_content" />
                </TableRow>


                <TableRow style="@style/profile_table_row">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    </LinearLayout>

                    <EditText
                        android:id="@+id/profile_interests_3"
                        style="@style/profile_edittext"
                        android:layout_width="wrap_content" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/profil_button"
                style="@style/profile_button_confirm"
                android:text="@string/confirm_button" />
        </LinearLayout>

    </ScrollView>

    <ListView
        android:id="@+id/main_lv_menu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="@color/white"></ListView>
</android.support.v4.widget.DrawerLayout>