<!-- Anmerkungen! -->
<!-- TextSize und TextColer werden ueber Styles geaendert -> Wiederverwendbarkeit der Styles -->

<!-- TextSize ist auf 18-40dp gesetzt! geht dies auch dynamisch?   -->
<!-- TableRow 2 Alter .. Eingabe in Gruppen einfÃ¼gen   -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="18dp"
        >

        <TextView
            android:text="@string/myprofil"
            style="@style/profile_headings"
            />

        <TableLayout
            style="@style/profile_table_layout"
            >
            <!-- Zeile 1  -->
            <TableRow
                style="@style/profile_table_row">

                <TextView
                    android:text="@string/name"
                    style="@style/profile_textviews"
                    />

                <EditText
                    android:id="@+id/name"
                    style="@style/profile_edittext"
                    />

            </TableRow>
            <!-- Zeile 2  -->
            <TableRow
                style="@style/profile_table_row">

                <TextView
                    android:text="@string/age"
                    style="@style/profile_textviews"
                    />

            </TableRow>
            <!-- Zeile 3  -->
            <TableRow
                style="@style/profile_table_row">

                <TextView
                    android:text="@string/gender"
                    style="@style/profile_textviews"
                    />

                <Spinner
                    style="@style/profile_spinner_sexual"
                    android:id="@+id/gender"
                    />

            </TableRow>
            <!-- Zeile 4  -->
            <TableRow
                style="@style/profile_table_row">

                <TextView
                    android:text="@string/studie"
                    style="@style/profile_textviews"
                    />

                <EditText
                    android:id="@+id/studie"
                    style="@style/profile_edittext"
                    />

            </TableRow>
            <!-- Zeile 5  -->
            <TableRow
                style="@style/profile_table_row">

                <TextView
                    android:text="@string/university"
                    style="@style/profile_textviews"
                    />

                <Spinner
                    style="@style/profile_spinner_university"
                    android:id="@+id/university"
                    />

            </TableRow>
            <!-- Zeile 6  -->
            <TableRow
                style="@style/profile_table_row">

                <TextView
                    android:text="@string/interests"
                    style="@style/profile_textviews"
                    />

                <EditText
                    android:id="@+id/interests"
                    style="@style/profile_edittext"
                    />

            </TableRow>
            <!-- Zeile 7  -->
            <TableRow
                style="@style/profile_table_row">

                <TextView
                    android:text="@string/hometown"
                    style="@style/profile_textviews"
                    />

                <EditText
                    android:id="@+id/hometown"
                    style="@style/profile_edittext"
                    />

            </TableRow>
            <!-- Zeile 8  -->
            <TableRow
                style="@style/profile_table_row">

                <TextView
                    android:text="@string/postal_code"
                    style="@style/profile_textviews"
                    />

                <EditText
                    android:id="@+id/postal_code"
                    style="@style/profile_edit_plz"
                    />

            </TableRow>
            <!-- Zeile 9  -->
            <TableRow
                style="@style/profile_table_row">

                <TextView
                    android:text="@string/sexual_preference"
                    style="@style/profile_textviews"
                    />

                <Spinner
                    style="@style/profile_spinner_sexual"
                    android:id="@+id/sexual_preference"
                    />

            </TableRow>
            <!-- Zeile 10  -->
            <TableRow
                style="@style/profile_table_row">

                <TextView
                    android:text="@string/profil_photo"
                    style="@style/profile_textviews"
                    />

            </TableRow>
        </TableLayout>

        <Button
            android:text="@string/confirm_button"
            style="@style/profile_button_confirm"
            />
    </LinearLayout>

</ScrollView>