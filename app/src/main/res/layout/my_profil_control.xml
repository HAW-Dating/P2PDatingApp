                android:text="Platzhalter"
                style="@style/profile_control_editcontrol"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>
</ScrollView>

    <ListView
        android:id="@+id/main_lv_menu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
