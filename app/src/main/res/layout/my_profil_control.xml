<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_profil_control_linear_layout"
    android:padding="18dp"
    >

    <!---create by Alisa-->
    <ImageView
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/logo"
        android:src="@drawable/my_profil_image" />

    <TableLayout
        style="@style/profile_control_table_layout"
    >
<!-- Zeile 1  -->

        <TableRow
            style="@style/profile_control_table_row">

            <TextView
                android:text="@string/name"
                style="@style/profile_control_textviews"
                />

